<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity=""
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ideal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:enabled="false"
        android:onClick="launchIdeal"
        android:padding="10dp"
        android:text="@string/ideal_button"
        android:drawableStart="@drawable/ideal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This feature uses a hard-coded sandbox tokenization key that is enabled for this local payment."
        android:padding = "10dp"/>
</RelativeLayout>