<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.braintreepayments.api.dropin.view.SecureLoadingProgressBar
        android:id="@+id/bt_header_loading_spinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true" />

    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/bt_header_status_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bt_header_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bt_base_textview"
        android:textColor="@color/bt_white"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bt_very_light_gray"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

